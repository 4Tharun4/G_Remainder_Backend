        "module": "NodeNext",
        "baseUrl": "src",
        "outDir": "dist",
        "rootDir": "src",
        "sourceMap": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "typeRoots": ["node_modules/@types"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}