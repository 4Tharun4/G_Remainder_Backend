{
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "module": "commonjs",
      "target": "es6",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }
  