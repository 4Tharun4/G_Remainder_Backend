{
    "compilerOptions": {
        "module": "NodeNext",
        "baseUrl": "src",
        "outDir": "dist",
        "rootDir": "src",
        "sourceMap": true,
        "noImplicitAny": true,
        "skipLibCheck": false,
        "noEmitOnError": false,  
        "typeRoots": ["node_modules/@types"],
        "paths": {
            "*": ["node_modules/*"]
          }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}